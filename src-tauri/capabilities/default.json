{
  "$schema": "https://schema.tauri.app/capability/2",
  "identifier": "default",
  "description": "Default capabilities for Bonk Engine Editor",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "shell:allow-execute",
    "fs:default",
    "fs:read-all",
    "fs:write-all",
    "fs:allow-exists",
    "fs:allow-mkdir",
    "fs:allow-remove",
    "fs:allow-rename",
    "fs:allow-copy-file",
    {
      "identifier": "fs:scope",
      "allow": ["$APP/**", "$RESOURCE/**", "**"]
    }
  ]
}
