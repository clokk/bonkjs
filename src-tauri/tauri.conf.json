{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Bonk Engine Editor",
  "version": "0.1.0",
  "identifier": "com.bonkengine.editor",
  "build": {
    "beforeDevCommand": "npm run dev -- --mode editor",
    "devUrl": "http://localhost:1420/editor.html",
    "beforeBuildCommand": "npm run build -- --mode editor",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Bonk Engine Editor",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
